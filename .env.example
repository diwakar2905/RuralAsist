# Environment Configuration
# Copy this to .env and fill in your values

# Email Service Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
SENDER_EMAIL=noreply@ruralassist.com
SENDER_NAME=RuralAssist

# Frontend URL (for email templates)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Database Configuration
DATABASE_URL=sqlite:///./ruralassist.db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=False
ENVIRONMENT=production

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# MyScheme API (if needed)
MYSCHEME_API_BASE=https://www.myscheme.gov.in/api/v2/search